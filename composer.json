{
  "name": "leocarmo/circuit-breaker-php",
  "description": "Circuit Breaker for PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Leonardo Carmo",
      "email": "leonardo.docarmo@hotmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "LeoCarmo\\CircuitBreaker\\": "src/"
